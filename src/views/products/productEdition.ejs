<%- include('../partials/head.ejs',{styles: ['base', 'footer', 'header', 'productEdition']}) %>

<body>
    <%- include('../partials/header.ejs') %>
    
    <main class="edition-container">

        <h4 class="title">Editar un ingrediente</h4>
        
        <form action="/products/<%= productToEdit.id %>/edit?_method=PUT" method="post">
            
            
            
            <div class="label-container">
                <label for="name">Nombre del ingrediente:</label>
                <input type="text" id="name" name="name" value="<%= productToEdit.name %>">
            </div>
            
            <div class="label-container">
                <label for="description">Descripción:</label>
                <textarea name="description" id="description" <%= productToEdit.description %>></textarea>
            </div>
            
            <label for="category">Categoría:</label>
            <select name="category">

                <option value="">Elegí</option>
                <option value="burguer" <%= productToEdit.category === "burguer" && "selected" %> >Hamburguesas</option>
                <option value="bread" <%= productToEdit.category === "bread" && "selected" %>>Panes</option>
                <option value="dressing" <%= productToEdit.category === "dressing" && "selected" %>>Aderezos</option>
                <option value="stiff" <%= productToEdit.category === "stiff" && "selected" %>>Fiambres</option>
                <option value="cheese" <%= productToEdit.category === "cheese" && "selected" %>>Quesos</option>
                <option value="green" <%= productToEdit.category === "green" && "selected" %>>Hojas Verdes</option>
                <option value="raw" <%= productToEdit.category === "raw" && "selected" %>>Vegetales Crudos</option>
                <option value="cooked" <%= productToEdit.category === "cooked" && "selected" %>>Vegetales Cocidos</option>
                
            </select>
            <div class="label-container">
                <label for="price">Precio:</label>
                <input type="number" id="numPrice" name="price" required value="<%= productToEdit.price %>">
            </div>
            
            <section class="button-container">
                <button class="btn btn-primary" type="submit">Editar</button>
                
            </section>
        </form>
        
    </main>
    
    <%- include('../partials/footer.ejs') %>
    
</body>

</html>












