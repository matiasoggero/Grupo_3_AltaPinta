   
    <%- include('../partials/head.ejs',{styles: ['base', 'footer', 'header', 'login']}) %>

    
<body>
    <%- include('../partials/header.ejs') %>
    
    <main class="form-container">
        <h2>INICIA SESION</h2> 
        <form action="/users/login" method="post">
            
            <div class="label-container">
                <input type="email" name="email" id="emailLogin" placeholder="email" required>
                <div id = "emailErrors" class= "fieldError"></div>
                <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                    <%= (errors.email.msg) %>
                </div>
                <% } %>
            </div>
            <div class="label-container">
                        <input type="password" name="password" id="passwordLogin" placeholder="Contraseña" required>
                        <div id = "passwordErrors" class= "fieldError"></div>
            </div>
            <div class="button-container">
                <button class="btn btn-primary" type="submit">Enviar</button>
            </div>
            <div class = "rememberme">
            <label for="recordarme">RECORDARME</label>
            <input type="checkbox" name="recordarme" id="recordarme" >
        </div>
            <div class="registrarse">
                Aún no te registraste?<a href ="http://localhost:3040/users/register" style="color:blue">
                 REGISTRATE AQUÍ</a>
            </div>
        </form>
    </main>
    
    <%- include('../partials/footer.ejs') %>
</body>
</html>