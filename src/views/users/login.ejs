   
    <%- include('../partials/head.ejs',{styles: ['base', 'footer', 'header', 'login']}) %>

    
<body>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <%- include('../partials/header.ejs') %>
    
    <main class="form-container">
        <h2>INICIA SESION</h2> 
        <form action="/users/login" method="post">
            
            <div class="label-container">
                <input type="email" name="email" id="emailLogin" placeholder="email">
                <div id = "emailErrors" class= "fieldError"></div>
                <% if (locals.errors && errors.email) { %>
                <div class="text-danger">
                    <%= (errors.email.msg) %>
                </div>
                <% } %>
            </div>

            <div class="label-container">
                <section class="password-container">
                    <input type="password" name="password" id="passwordLogin" placeholder="Contraseña" >
                    <i class='bx bx-show'></i>
                    <i class='bx bx-hide' ></i>
                    <div id = "passwordErrors" class= "fieldError"></div>
                </section>
            </div>

            <div class="button-container">
                <button class="btn btn-primary" type="submit">Enviar</button>
            </div>

            <div class="rememberme">
            <label for="recordarme">RECORDARME</label>
            <input type="checkbox" name="recordarme" id="recordarme" >
        </div>
            <div class="registrarse">
                Aún no te registraste?<a href ="http://localhost:3040/users/register" style="color:#daa520 ">
                 REGISTRATE AQUÍ</a>
            </div>
        </form>
    </main>
    
    <%- include('../partials/footer.ejs') %>
    <script src="/js/loginValidation.js"></script>
</body>
</html>