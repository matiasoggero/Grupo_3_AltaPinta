    
    <%- include('../partials/head.ejs',{styles: ['base', 'footer', 'header', 'register']}) %>
    
    <body>
        <%- include('../partials/header.ejs') %>
        
        <main class="form-container">
            <h2>REGISTRATE</h2>
            <form action="/users/register" method="POST" enctype="multipart/form-data">

                <label for="name">Nombre y Apellido:</label>
                <input type="text" id="name" name="name" placeholder="Debe contener al menos 2 caracteres" minlength="2" required/>
                <div class= "fieldError">
                </div>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Debe contener un email valido" minlength="8" required/>
                <div class= "fieldError">
                </div>
                
                <label for="date">Fecha de nacimiento:</label>
                <input type="date" id="date" name="date" pattern="[0-9]{9}" required/>

                <label for="address">Domicilio</label>
                <input type="text" id="address" name="address" placeholder="Debe contener una direccion valida" required/>
                <div class= "fieldError">
                </div>
                
                <label for="phone">Telefono</label>
                <input type="number" id="phone" name="phone" pattern="[0-9]{9}" placeholder="Ej: 3492-456789" required/>
                <div class= "fieldError">
                </div>

                <label for="avatar">Imagen</label>
                <input type="file" id="avatar" name="avatar"/>
                <div class= "fieldError" required>
                </div>
                
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password" minlength="8" placeholder="Debe contener al menos 8 caracteres" required/>
                <div class= "fieldError">
                </div>
                
                <label for="confirm_password">Confirmar contraseña:</label>
                <input type="password" id="confirm_password" name="confirm_password" minlength="8" required/>
                
                
                <div class="button-container">
                    <button class="btn btn-secundary" type="reset">Borrar datos</button>
                    <button class="btn btn-primary" type="submit">Enviar</button>
                </div>
            </main>
            
            <%- include('../partials/footer.ejs') %>
            <script src="/js/register.js"></script>

        </body>
        </html>