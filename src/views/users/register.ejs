    <body>
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

        <%- include('../partials/header.ejs') %>
        
        <main class="form-container">
            <h2>REGISTRATE</h2>
            <form action="/users/register" method="POST" enctype="multipart/form-data">

                <label for="name">Nombre y Apellido:</label>
                <input type="text" id="name" name="name" placeholder="Ingrese Nombre y Apellido" minlength="2" />
                <div id = "nameErrors" class= "fieldError"></div>
                
                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="Ingrese su email" minlength="8" />
                <div id="emailErrors" class= "fieldError"></div>
                
                <label for="date">Fecha de nacimiento:</label>
                <input type="date" id="date" name="date" />

                <label for="address">Domicilio</label>
                <input type="text" id="address" name="address" placeholder="Ingrese su direcci칩n" />
                
                <label for="phone">Telefono</label>
                <input type="number" id="phone" name="phone" pattern="[0-9]{9}" placeholder="Ej: 3492-456789" />

                <label for="avatar">Imagen</label>
                <input type="file" id="avatar" name="avatar"/>
                <div id = "imageErrors" class= "fieldError"></div>
                
                <label for="password">Contrase침a:</label>
                <section class="password-container">
                <input  type="password" id="password" name="password" minlength="8" placeholder="Ingrese una contrase침a" />
                    <i class='bx bx-show'></i>
                    <i class='bx bx-hide' ></i>
                </section>
                <div id = "passwordErrors" class= "fieldError"></div>
                
                <label  for="confirm_password">Confirmar contrase침a:</label>
                <section class="password-container">
                    <input type="password" id="confirm_password" name="confirm_password" minlength="8" />
                    <i class='bx bx-show'></i>
                    <i class='bx bx-hide' ></i>
                </section>
                <div id = "confirmPasswordErrors" class= "fieldError"></div>

                
                <div class="button-container">
                    <button class="btn btn-secundary" type="reset">Borrar datos</button>
                    <button class="btn btn-primary" type="submit">Enviar</button>
                </div>
            </form>
        </main>

            
        <%- include('../partials/footer.ejs') %>
        <script src="/js/registerValidation.js"></script>

    </body>
</html>