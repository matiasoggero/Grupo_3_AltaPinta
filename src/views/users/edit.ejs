<%- include('../partials/head.ejs',{styles: ['base', 'footer', 'header', 'register']}) %>
    
<body>
    <%- include('../partials/headerAdmin.ejs') %>
    <main>
        
        <form action="/users/<%= user.id %>/edit?_method=PUT" method="POST">
            
            <label for="name">Nombre y Apellido:</label>
            <input type="text" id="name" name="name" value="<%=user.name%>"required/>
            
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%=user.email%>"required/>
            
            <label for="date">Fecha de nacimiento:</label>
            <input type="date" id="date" name="date"value="<%=user.date%>"required />
            
            <label for="address">Domicilio</label>
            <input type="text"id="address"name="address"value="<%=user.address%>"required/>
            
            <label for="phone">Telefono</label>
            <input type="number"id="phone"name="phone"pattern="[0-9]{9}"value="<%=user.phone%>"required/>

            <label for="avatar">Imagen</label>
            <input type="file"id="avatar" name="avatar"value="<%=user.avatar%>"/>
            
            <label for="password">Contraseña:</label>
            <input type="password"id="password" name="password"minlength="6"value="<%=user.password%>"required />
            
            <label for="confirm_password">Confirmar contraseña:</label>
            <input type="password"id="confirm_password" name="confirm_password"minlength="6" value="<%=user.confirm_password%>"required/>
            
            
            <div class="button-container">
                <button class="btn btn-secundary" type="reset">Borrar datos</button>
                <button class="btn btn-primary" type="submit">Enviar</button>
            </div>
        </main>
        
        <%- include('../partials/footer.ejs') %>
        
    </body>
    </html>