<%- include('../partials/head.ejs',{styles: ['base', 'footer' , 'header' , 'users' , 'register' ]}) %>

    <body>
        <%- include('../partials/headerAdmin.ejs') %>
            <main>
                <h4 class="users-title"> Editar un usuario </h4>

                <form action="/users/<%= user.id %>/edit?_method=PUT" method="POST">


                    <label for="name">Nombre y Apellido:</label>
                    <input type="text" id="name" name="name" value="<%= user.name %>" />


                    <label for="email">Email:</label>
                    <input type="email" id="email" name="email" value="<%=user.email%>" />

                    <label for="address">Domicilio</label>
                    <input type="text" id="address" name="address" value="<%=user.address%>" />

                    <label for="phone">Telefono</label>
                    <input type="number" id="phone" name="phone" pattern="[0-9]{9}" value="<%=user.phone%>" />

                    <div class="button-container">
                        <button class="btn btn-secundary" type="reset">Borrar datos</button>
                        <button class="btn btn-primary" type="submit">Enviar</button>
                    </div>
            </main>

            <%- include('../partials/footer.ejs') %>

    </body>

    </html>